<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<Button
		android:id="@+id/goQuizzButtonNormal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Démarer le Quizz en Normal"
		app:layout_constraintBottom_toTopOf="@+id/listQuestionButton"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/goQuizzButtonEasy" />

	<Button
		android:id="@+id/aboutButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="A propos"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="@+id/goQuizzButtonNormal"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="@+id/goQuizzButtonNormal"
		app:layout_constraintTop_toBottomOf="@+id/listQuestionButton" />

	<Button
		android:id="@+id/listQuestionButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Afficher la liste des questions"
		app:layout_constraintBottom_toTopOf="@+id/aboutButton"
		app:layout_constraintEnd_toEndOf="@+id/goQuizzButtonNormal"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="@+id/goQuizzButtonNormal"
		app:layout_constraintTop_toBottomOf="@+id/goQuizzButtonNormal" />

	<Button
		android:id="@+id/goQuizzButtonEasy"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Démarer le quizz en eazy"
		app:layout_constraintBottom_toTopOf="@+id/goQuizzButtonNormal"
		app:layout_constraintEnd_toEndOf="@+id/goQuizzButtonNormal"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="@+id/goQuizzButtonNormal"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>